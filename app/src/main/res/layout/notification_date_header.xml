<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/notification_section_date"
        android:textAppearance="?textAppearanceBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/guideline_standard_padding"
        tools:text="5 October" />

    <TextView
        android:id="@+id/notification_section_day"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="?android:textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/guideline_standard_padding"
        tools:ignore="MissingPrefix"
        tools:text="Monday" />

    <include
        android:layout_width="match_parent"
        android:layout_height="?dividerVerticalSize"
        android:layout_gravity="bottom"
        layout="@layout/view_divider_vertical" />
</FrameLayout>