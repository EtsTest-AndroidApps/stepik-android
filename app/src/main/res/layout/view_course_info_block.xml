<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/blockIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="start|center_vertical"
        android:alpha="?alphaEmphasisHigh"
        android:contentDescription="@null"
        app:tint="?colorOnSurface" />

    <TextView
        android:id="@+id/blockTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/course_info_block_text_margin"

        android:layout_marginLeft="@dimen/course_info_block_text_margin"
        android:gravity="start|center_vertical"

        android:textAppearance="?textAppearanceSubtitle1" />

</FrameLayout>