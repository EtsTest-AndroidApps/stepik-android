<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <include
        android:id="@+id/blockHeader"
        layout="@layout/view_course_info_block" />

    <org.stepik.android.view.latex.ui.widget.LatexView
        android:id="@+id/blockMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/course_info_block_margin"
        android:layout_marginStart="@dimen/course_info_block_text_margin"
        android:layout_marginLeft="@dimen/course_info_block_text_margin"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary" />

</LinearLayout>