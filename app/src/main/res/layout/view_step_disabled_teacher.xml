<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:visibility="gone"
    tools:visibility="visible"
    tools:viewBindingIgnore="true">

    <com.google.android.material.textview.MaterialTextView
        style="@style/StepQuizFeedback.Wrong"
        android:textAppearance="?textAppearanceSubtitle1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/step_disabled_teacher_title"
        app:drawableStartCompat="@drawable/ic_step_quiz_validation" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/placeholderMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_placeholders"
        android:textAppearance="?textAppearanceBody1"
        android:linksClickable="true" />

    <include layout="@layout/view_divider_vertical" />

</androidx.appcompat.widget.LinearLayoutCompat>