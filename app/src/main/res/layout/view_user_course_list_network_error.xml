<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userCourseListNetworkErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Connection is lost"
        tools:text="Connection is lost"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/userCoursesListNetworkErrorAction"
        style="@style/Widget.AppTheme.Button.OutlinedButton"
        android:theme="@style/ThemeOverlay.Violet"
        android:layout_width="148sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintTop_toBottomOf="@id/userCourseListNetworkErrorTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Try again"
        tools:text="Try again"/>

</androidx.constraintlayout.widget.ConstraintLayout>